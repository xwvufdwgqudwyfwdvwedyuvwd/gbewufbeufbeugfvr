local repo = "https://raw.githubusercontent.com/deividcomsono/Obsidian/main/"
local Library = loadstring(game:HttpGet(repo .. "Library.lua"))()

-- Waktu update yang ditentukan (contoh: 02/11/2025 jam 14:00)
local updateTime = os.time({year=2025, month=11, day=2, hour=14, min=0, sec=0})

-- Waktu sekarang
local now = os.time()

-- Selisih waktu dalam detik
local diff = now - updateTime

-- Format jam dan tanggal update
local updateDateStr = os.date("%d/%m/%Y %H:%M", updateTime) -- hasil: "02/11/2025 14:00"

-- Tentukan description
local description
if diff <= 2 * 60 * 60 then
    description = "New"
else
    description = "Old " .. updateDateStr
end

-- Memanggil notifikasi
Library:Notify({
    Title = "Update Log",
    Description = description,
    Time = 4,
})
